<!-- shows information about selected campsite -->
<%- include ("../partials/header")%>
<div class="conainer">
  <div class="row">
    <div class="col-md-3">
      <br />
      <div class="list-group">
        <li class="list-group-item active">info 1</li>
        <li class="list-group-item">info 2</li>
        <li class="list-group-item">info 3</li>
      </div>
      <div id="map" style="height: 400px; width: 100%;"></div>
      <br />
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img
          height="auto"
          width="100%"
          class="img-responsive"
          src="<%= campground.image %> "
          alt=""
        />
        <div class="caption-full">
          <em><p class="float-right"><%= campground.price %>$/night</p></em>
          <strong
            ><h3><a><%= campground.name %></a></h3></strong
          >
          <p><%= campground.description %></p>
          <p>Submitted by <%= campground.author.username %></p>
        </div>
      </div>
      <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
      <div class="d-flex align-items-start">
        <a href="/campgrounds/<%= campground._id %>/edit"
          ><button class="btn btn-warning">Edit</button></a
        >
        <form
          action="/campgrounds/<%= campground._id %>/?_method=DELETE"
          method="POST"
        >
          <button class="delete-form btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <hr />
      <div class="well">
        <div id="comments">
          <div class="row">
            <div class="col">
              <% campground.comments.forEach(comment=> { %>
              <strong><%= comment.author.username%></strong>
            </div>
            <span class="float-right">10 days ago</span>
          </div>
          <p><%= comment.text%></p>
          <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
          <button class="btn btn-xs btn btn-warning">
            <a
              href="/campgrounds/<%= campground._id %>/comments/<%= comment._id%>/edit"
              >Edit</a
            >
          </button>
          <div class="d-inline-flex align-items-start">
            <form
              action="/campgrounds/<%= campground._id%>/comments/<%= comment._id %>?_method=DELETE"
              method="POST"
            >
              <button class="delete-form btn btn-danger">Delete</button>
            </form>
            <% } %>
          </div>
          <% }) %>
          <div class="d-flex justify-content-center">
            <a
              class="btn btn-light"
              href="/campgrounds/<%= campground._id %>/comments/new"
              >Leave a review</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    function initMap() {
      const lat = <%= campground.lat %>;
      const lng = <%= campground.lng %> ;
      const center = { lat: lat, lng: lng };
      const map = new google.maps.Map(document.getElementById("map"), {
        zoom: 8,
        center: center,
        scrollwheel: false,
      });
      const contentString = `
        <strong><%= campground.name %><br />
        <%= campground.location %></strong>
        <p><%= campground.description %></p>
      `;
      const infowindow = new google.maps.InfoWindow({
        content: contentString,
      });
      const marker = new google.maps.Marker({
        position: center,
        map: map,
      });
      marker.addListener("click", () => {
        infowindow.open(map, marker);
      });
    }
  </script>
  <script
    async
    defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCeI6FVN3SKBR3hc4q9XENMJ-rg8VtIqis&callback=initMap"
  ></script>

  <%- include ("../partials/footer")%>
</div>
