<%- include ("./partials/header") %>
<div class="auth-body">
  <h1 class="auth-header">Login!</h1>
  <form class="auth" action="/login" method="post">
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="username"
        placeholder="username"
      />
    </div>
    <div class="form-group">
      <input
        class="form-control"
        type="password"
        name="password"
        placeholder="password"
      />
    </div>
    <div class="form-group">
      <button class="float-right btn btn-primary" type="submit">
        Login
      </button>
    </div>

    <a href="/campgrounds">Go Back</a>
  </form>
</div>

<%- include ("./partials/footer") %>
